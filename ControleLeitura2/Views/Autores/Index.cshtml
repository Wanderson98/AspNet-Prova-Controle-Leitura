@model IEnumerable<ControleLeitura2.Models.Autor>

@{
    ViewData["Title"] = "Index";
}
<h2>Lista de Autores</h2>

<p>
    <a asp-action="Create" class = "btn btn-success">Adicionar Autor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AutorNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorNacionalidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AutorNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorNacionalidade)
            </td>
            <td>
                <a asp-action="Edit" class = "btn btn-warning" asp-route-id="@item.AutorId">Editar</a> 
                <a asp-action="Details" class = "btn btn-info" asp-route-id="@item.AutorId">Detalhes</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.AutorId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
