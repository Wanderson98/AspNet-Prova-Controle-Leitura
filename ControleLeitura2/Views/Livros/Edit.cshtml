@model ControleLeitura2.Models.Livro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Livros" asp-action="Edits" asp-route-id="@Model.LivroId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LivroId" />

            <div class="row">
                <div class="col-md-5">
                    <div class="col-md-10 col-lg-10">
                        <div class="form-group">
                            <label asp-for="NomeLivro" class="control-label"></label>
                            <input asp-for="NomeLivro" class="form-control" />
                            <span asp-validation-for="NomeLivro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ResumoLivro" class="control-label"></label>
                            <textarea asp-for="ResumoLivro" class="form-control" rows="8"></textarea>
                            <span asp-validation-for="ResumoLivro" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="AnoLancamento" class="control-label"></label>
                                <input asp-for="AnoLancamento" class="form-control" />
                                <span asp-validation-for="AnoLancamento" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check col-5 mt-4 ms-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsFavorito" /> @Html.DisplayNameFor(model => model.IsFavorito)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="LivroCapaCaminho" class="control-label"></label>
                            <input asp-for="LivroCapaCaminho" class="form-control" />
                            <span asp-validation-for="LivroCapaCaminho" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="PaginaAtual" class="control-label"></label>
                                <input asp-for="PaginaAtual" class="form-control" />
                                <span asp-validation-for="PaginaAtual" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Nota" class="control-label"></label>
                                <input asp-for="Nota" class="form-control" />
                                <span asp-validation-for="Nota" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="col-md-8 col-lg-8">
                        <div class="form-group">
                            <label asp-for="CategoriaId" class="control-label"></label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="AutorId" class="control-label"></label>
                            <select asp-for="AutorId" class="form-control" asp-items="ViewBag.AutorId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="EditoraId" class="control-label"></label>
                            <select asp-for="EditoraId" class="form-control" asp-items="ViewBag.EditoraId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="StatusId" class="control-label"></label>
                            <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PrioridadeId" class="control-label"></label>
                            <select asp-for="PrioridadeId" class="form-control" asp-items="ViewBag.PrioridadeId"></select>
                        </div>

                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary mt-3" />
                <a asp-action="Index" class="btn btn-outline-dark mt-3">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
