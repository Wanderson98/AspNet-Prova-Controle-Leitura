@model IEnumerable<ControleLeitura2.Models.Editora>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Lista de Editoras</h1>

<p>
    <a asp-action="Create" class = "btn btn-success">Adicionar Editora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EditoraNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditoraCnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditoraEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneEditora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EditoraNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditoraCnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditoraEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneEditora)
            </td>
            <td>
              <a asp-action="Edit" class = "btn btn-warning" asp-route-id="@item.EditoraId">Editar</a> 
                <a asp-action="Details" class = "btn btn-info" asp-route-id="@item.EditoraId">Detalhes</a>
               <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.EditoraId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
